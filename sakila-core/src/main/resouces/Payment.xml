<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
        version="2.0">

    <entity class="com.uniyaz.tum.Payment">
        <table name="payment" schema="sakila" catalog=""/>
        <attributes>
            <id name="paymentId">
                <column name="payment_id"/>
            </id>
            <basic name="amount">
                <column name="amount"/>
            </basic>
            <basic name="paymentDate">
                <column name="payment_date"/>
            </basic>
            <basic name="lastUpdate">
                <column name="last_update"/>
            </basic>
            <many-to-one name="customerByCustomerId" optional="true" target-entity="com.uniyaz.tum.Customer">
                <join-column name="customer_id" referenced-column-name="customer_id"/>
            </many-to-one>
        </attributes>
    </entity>
</entity-mappings>
