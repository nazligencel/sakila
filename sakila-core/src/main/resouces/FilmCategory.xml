<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
        version="2.0">

    <entity class="com.uniyaz.tum.FilmCategory">
        <table name="film_category" schema="sakila" catalog=""/>
        <id-class class="com.uniyaz.tum.FilmCategoryPK"/>
        <attributes>
            <id name="filmId">
                <column name="film_id"/>
            </id>
            <id name="categoryId">
                <column name="category_id"/>
            </id>
            <basic name="lastUpdate">
                <column name="last_update"/>
            </basic>
            <many-to-one name="filmByFilmId" optional="true" target-entity="com.uniyaz.tum.Film">
                <join-column name="film_id" referenced-column-name="film_id"/>
            </many-to-one>
            <many-to-one name="categoryByCategoryId" optional="true" target-entity="com.uniyaz.tum.Category">
                <join-column name="category_id" referenced-column-name="category_id"/>
            </many-to-one>
        </attributes>
    </entity>
</entity-mappings>
